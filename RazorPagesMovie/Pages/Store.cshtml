@page
@model RazorPagesMovie.Pages.StoreModel

@{
}
<style>
    .vertical-line {
  height: 100%;
  border-right: 3px solid rgba(128, 128, 128, 0.5);
 
}

</style>
<div class="row mt-5">
    <div class="col-3 mr-5 vertical-line"  >
        <div class="mb-4">
            <h5>Kategorie</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox1" value="wegiel-brunatny">
                <label class="form-check-label" for="checkbox1">Węgiel brunatny</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox2" value="wegiel-kamienny">
                <label class="form-check-label" for="checkbox2">Węgiel kamienny</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="checkbox3" value="wegiel-drzewny">
                <label class="form-check-label" for="checkbox3">Węgiel drzewny</label>
            </div>
        </div>
        <div class="mb-4">
            <h5>Zakres cenowy</h5>
            <div class="input-group">
                <span class="input-group-text">Od</span>
                <input type="text" class="form-control" placeholder="Min cena">
                <span class="input-group-text">Do</span>
                <input type="text" class="form-control" placeholder="Max cena">
            </div>
        </div>
        
        <div class="mb-4">
            <h5>Typ węgla</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="typ1">
                <label class="form-check-label" for="typ1">Miał</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="typ2">
                <label class="form-check-label" for="typ2">Orzech</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="typ3">
                <label class="form-check-label" for="typ3">Kostka</label>
            </div>
           
        </div>
        <div class="mb-4">
            <h5>Opakowanie</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="opakowanie1">
                <label class="form-check-label" for="opakowanie1">Paczki</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="opakowanie2">
                <label class="form-check-label" for="opakowanie2">Bigbagi</label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="opakowanie3">
                <label class="form-check-label" for="opakowanie3">Sypki</label>
            </div>
            
        </div>
        <div class="mb-4">
            <h5>Ocena</h5>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ocena1">
                <label class="form-check-label" for="ocena1">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ocena2">
                <label class="form-check-label" for="ocena2">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ocena3">
                <label class="form-check-label" for="ocena3">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9734;</span>
                    <span class="star">&#9734;</span>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ocena3">
                <label class="form-check-label" for="ocena3">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9734;</span>
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="ocena3">
                <label class="form-check-label" for="ocena3">
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                    <span class="star">&#9733;</span>
                </label>
            </div>

        </div>
    </div>
    
    <div class="col-9 ml-5">
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @if (Model.Products?.Count > 0)
            {
                foreach (var product in Model.Products)
                {
                    <div class="col">
                        <div class="card h-100">
                            <img src="@Url.Content(product.ImageUrl)" class="card-img-top">
                            <div class="card-body">
                                <h5 class="card-title">Nazwa: @product.Name</h5>
                                <p class="card-text">Ilość: @product.QuantityInStock ton</p>
                                <p class="card-text">Cena: @product.Price</p>
                                <p class="card-text">Opis: @product.Description</p>
                            </div>
                            <div class="card-footer d-flex justify-content-center">
                                <form method="post">
                                    <input type="hidden" value="@product.Id" name="ProductID" />
                                    <label for="quantity">Ilość ton :</label>
                                    <input type="number" id="quantity" name="Quantity" />
                                    <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-1" asp-page-handler="AddToCart">Dodaj do koszyka</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
